{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@theme/*": ["theme/*"]
    },
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
